<Window x:Class="ElementBindingDemo4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel  Margin="5" DockPanel.Dock="Right">
            <Button Name="btn_add" Margin="0,5,0,0" FontSize="10" Click="btn_add_Click">添加用户</Button>
            <Button Name="btn_edit" Margin="0,5,0,0" FontSize="10" Click="btn_edit_Click">更新用户</Button>
            <Button Name="btn_del" Margin="0,5,0,0" FontSize="10" Click="btn_del_Click">删除用户</Button>
        </StackPanel>
        <ListBox Name="lb_user" DisplayMemberPath="Name">
            
        </ListBox>
    </DockPanel>
</Window>
