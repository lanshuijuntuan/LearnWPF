<Window x:Class="GridDemo7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">Left Text</TextBlock>
        <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch"></GridSplitter>
        <TextBlock Grid.Column="2" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">Right Text</TextBlock>
    </Grid>
</Window>
