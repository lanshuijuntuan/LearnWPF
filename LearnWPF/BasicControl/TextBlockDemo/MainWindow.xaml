<Window x:Class="TextBlockDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="250">
    <StackPanel>
        <TextBlock>this is a TextBlock</TextBlock>
        <TextBlock>this is a TextBlock control and it comes with a very long text</TextBlock>
        <TextBlock Margin="10" Foreground="Red">
            this is a TextBlock control<LineBreak/>
            with multiple lines of text
        </TextBlock>
        <TextBlock Margin="10" TextTrimming="CharacterEllipsis" Foreground="Green">
            this a TextBlock control with text that may not be rendered compleltely,which will be indicated with an ellipsis
        </TextBlock>
        <TextBlock Margin="10" TextTrimming="WordEllipsis" Foreground="Chartreuse">
            this a TextBlock control with text that may not be rendered compleltely,which will be indicated with an ellipsis
        </TextBlock>
        <TextBlock Margin="10" TextWrapping="Wrap" Foreground="Blue">
            this is a TextBlock control with automatically wrapped text,using the Textwrapping property
        </TextBlock>
    </StackPanel>
</Window>
