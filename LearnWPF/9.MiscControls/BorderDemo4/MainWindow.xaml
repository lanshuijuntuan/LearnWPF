<Window x:Class="BorderDemo4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="175" Width="200">
    <Grid Margin="10">
        <Border BorderThickness="1,5,1,3" BorderBrush="Navy">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightCyan" Offset="0.0"> </GradientStop>
                    <GradientStop Color="LightBlue" Offset="0.5"></GradientStop>
                    <GradientStop Color="DarkTurquoise" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="10">
                <Button>buton 1</Button>
                <Button Margin="0,10">button 2</Button>
                <Button>button 3</Button>
            </StackPanel>
            
        </Border>
    </Grid>
</Window>
