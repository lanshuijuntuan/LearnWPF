<Window x:Class="ProgressBarDemo4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="300">
    <Grid Margin="20">
        <ProgressBar Maximum="100" Minimum="0" Value="75" Name="pbStatus"></ProgressBar>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ElementName=pbStatus,Path=Value,StringFormat={}{0:0}%}"></TextBlock>
    </Grid>
</Window>
