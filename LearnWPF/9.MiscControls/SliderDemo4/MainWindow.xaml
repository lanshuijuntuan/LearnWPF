<Window x:Class="SliderDemo4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="300">
    <DockPanel Margin="10" VerticalAlignment="Center">
        <TextBox DockPanel.Dock="Right" Width="40" Margin="10,0,0,0" Text="{Binding ElementName=slValue,Path=Value,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Slider Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="slValue"></Slider>
    </DockPanel>
</Window>
